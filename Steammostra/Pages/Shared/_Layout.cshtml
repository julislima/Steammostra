<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Steammostra.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="espaco-topo"></div>
        <header class="header">
            <div class="column">
                <!-- Redes Sociais -->
                <h2>Siga-nos</h2>
                <div class="icons">
                    <a href="#"><div class="icon"><img src="~/images/facebook-icon.png" alt="Facebook"></div></a>
                    <a href="#"><div class="icon"><img src="~/images/instagram-icon.png" alt="Instagram"></div></a>
                    <a href="#"><div class="icon"><img src="~/images/twitter-icon.png" alt="Twitter"></div></a>
                    <a href="#"><div class="icon"><img src="~/images/linkedin-icon.png" alt="LinkedIn"></div></a>
                </div>
            </div>

            <!-- Acessibilidade -->
            <div class="column">
                <h2>Acessibilidade</h2>
                <div class="icons">
                    <a href="#"><div class="icon"><img src="~/images/accessibility-icon.png" alt="Acessibilidade"></div></a>
                    <a href="#"><div class="icon"><img src="~/images/language-icon.png" alt="Idioma"></div></a>
                </div>
            </div>
        </header>

        <!-- Copyright dentro do footer -->
        <div class="footer-bottom">
            <p>&copy; 2024 Minha Empresa. Todos os direitos reservados.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
