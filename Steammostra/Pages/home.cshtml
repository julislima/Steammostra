@page
@model Steammostra.Pages.homeModel

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exemplo de Navbar com Banner e Imagens</title>
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<body>
    <div class="navbar">
        <img src="~/imagens/LOGOOFC.png" alt="Logo">
        <div class="nav-links">
            <a href="/home">Início</a>
            <a href="/sobre">Sobre</a>
            <a href="/Serviços">Serviços</a>
        </div>
    </div>

    <div class="banner">

        <div class="text-background">
                <h1>Explore um novo mundo com a acessibilidade que você merece!</h1>
            <img class="banner-image" src="~/imagens/MaletaTelaPrincipal.png" alt="MalaViagem">
            <div class="button-container">
                <button>Saiba Mais</button>
            </div>
        </div>
    </div>

    <div class="image-container">

        <div class="image-box">
            <img src="~/imagens/EleveadorLacerda.png" alt="Elevador Lacerda">
            <h3>Elevador Lacerda, Salvador.</h3>
        </div>

        <div class="image-box">
            <img src="~/imagens/piermahimahi.png" alt="Imagem 2">
            <h3>Píer do Mahi Mahi, Salvador.</h3>
        </div>
        <div class="image-box">
            <img src="~/imagens/senhorbonfim.png" alt="Imagem 3">
            <h3>Basílica Senhor do Bonfim, Salvador.</h3>
        </div>
    </div>
    <div class="banner">
        <img class="image-box" src="~/imagens/ajudafoto.png" alt="MalaViagem">
        <div class="help">
            <h1>Precisa de ajuda?</h1>
            <p>Converse com nossa equipe de suporte para obter recomendações e assistência personalizada durante sua viagem.</p>
            <button onclick="location.href='sua-pagina.html'" class="btn btn-primary">Saiba Mais</button>
        </div>
    </div>
</body>
</html>
